root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
block_comment_start = /*
block_comment = *
block_comment_end = */
indent_style = space
indent_size = 2

[{*.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2

[README.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[{*.json}]
insert_final_newline = false

[{Makefile,**.mk,Makefile.**}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
